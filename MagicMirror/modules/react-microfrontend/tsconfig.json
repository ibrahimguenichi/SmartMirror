{
  "compilerOptions": {
    "jsx": "react-jsx",           // or "react" for older versions
    "lib": ["dom", "esnext"],     // include DOM
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src"]              // adjust if your source is elsewhere
}
